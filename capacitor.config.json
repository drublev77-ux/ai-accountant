{
  "appId": "com.aiaccountant.app",
  "appName": "AI Accountant",
  "webDir": "dist",
  "bundledWebRuntime": false,
  "server": {
    "androidScheme": "https",
    "iosScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0f172a",
      "androidSplashResourceName": "splash",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#10b981",
      "showSpinner": true
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#0f172a"
    }
  }
}
